{
  "name": "bunest",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "start:dev": "bun run --watch --env-file=.env src/main.ts",
    "x:build": "nest build",
    "start": "bun dist/main.js",
    "docker:network": "docker network create bunest",
    "docker:build": "docker build . -t",
    "docker:run": "docker run --env-file=.env.docker -p 3000:3000 --network bunest",
    "kafka:greet": "sh ./scripts/greet.sh"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@types/bun": "latest",
    "swc": "^1.0.11"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@nestjs/bull": "^10.2.1",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/microservices": "^10.4.1",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/platform-express": "^10.4.1",
    "bull": "^4.16.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connection-string": "^4.4.0",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.6.0",
    "reflect-metadata": "^0.2.2"
  }
}
